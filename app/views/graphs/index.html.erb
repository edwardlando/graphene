
<!DOCTYPE html>
<html>
<meta charset="utf-8">
<link rel="canonical" href="http://d3js.org/">
<title>Graphene | Beautiful Data</title>
<head>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tags %> 
  <script src="http://code.jquery.com/jquery-latest.min.js"
        type="text/javascript"></script>
  <script src="assets/d3.js"></script>
  <script src="assets/d3.min.js"></script>
  <script src="assets/geo.js"></script>
  <script src="assets/geom.js"></script>
  <script src="assets/dsv.js"></script>
  <script src="assets/csv.js"></script>
  <script type="text/javascript" src="//api.filepicker.io/v1/filepicker.js"></script>
  <script type="text/javascript" src="//api.filepicker.io/v1/filepicker.js"></script>
  <script type="text/javascript"> 
    filepicker.setKey('AYdPBJoBRaKh7NvZBMy0Qz');
    var name = $('#name').val();
    if (name != '') {
    filepicker.pickAndStore({},{},function(fpfiles){
      var file = {};
      file['url'] = fpfiles['url'];
 
    });
       window.location("/" + name);
    }
  </script>
</head>
<body>
  <div id="body">
    <%= form_for(Graph.new(), :id => "graph") do |f| %>
      <ul id="graph_form">
      <li class="field" id="graph_type">
        <%= f.select(:graph_type, Graph::GRAPH_URLS) %>  
            <div class="picker">
                <% Graph::GRAPH_URLS.each do |url| %>
                    <span class="option"><%= image_tag(url) %></span>
                <% end %>
            </div>
      </li>
      <li class="field">
        <%= f.label :permalink %><br />
        <%= f.text_field :permalink %>
      </li>
       <li class="field">
        <%= f.label :excel_url %><br />
        <%= f.text_field :excel_url %>
      </li>
       <li class="field">
          <%= f.label :category %><br />
        <%= f.text_field :category %>
      </li>
       <li class="field">
        <%= f.label :visualization_name %><br />
        <%= f.text_field :visualization_name %>
      </li>
    </ul>
    <% end %>

<form> 
   Graph Name<input id="name" type="text" name="name"/><br />
   File<input type="filepicker" name="file"/><br />
   <input type="submit" />
</form>

</body>
</html>
